@model IEnumerable<WFRXRC.Entities.ctl_Proyecto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .mr {
        margin-right: .5%;
    }
</style>
<div>
    <div class="col s12 right-align mr">
        <p>
            @Html.ActionLink("Crear Nuevo", "Create", null, null, new { @class = "btn btn-primary", @id = "btn_create" })
        </p>
    </div>
</div>

<div style="overflow:auto;">
    <div class="row">
        <div class="col s12">
            <div class="card-panel" style="overflow:auto">
                <table class="table">
                    <tr>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Id_Cliente)*@
                            ID Cliente
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Nombre_Proyecto)*@
                            Nombre Proyecto
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Dias_Asignados)*@
                            Días Asignados
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Horas_Asignadas)*@
                            Horas Asignadas
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Costo_Dia)*@
                            Costo Día
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Costo_Tiempo)*@
                            Costo Tiempo
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(model => model.Fecha_Inicio)*@
                            Fecha de Inicio
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ctl_Cliente.RazonSocial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre_Proyecto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Dias_Asignados)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Horas_Asignadas)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Costo_Dia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Costo_Tiempo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fecha_Inicio)
                            </td>
                            <td>
                                <a data-form-method="post" href="@Url.Action("Edit", "Proyecto", new { id = item.Id_Proyecto })">
                                    <i class='material-icons blue-text'>edit</i>
                                </a>
                                <a data-form-method="post" href="@Url.Action("Details", "Proyecto", new { id = item.Id_Proyecto })">
                                    <i class='material-icons blue-text'>search</i>
                                </a>
                                <a data-form-method="post" href="@Url.Action("Delete", "Proyecto", new { id = item.Id_Proyecto })">
                                    <i class='material-icons blue-text'>delete</i>
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

