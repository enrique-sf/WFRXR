<style>
    .estilobtn {
        display: inline-block;
        padding: 1em;
        margin: 0 auto;
    }
</style>
@if (Session["permisos"].ToString() == "1")
{
    <div class="row" style="margin-top:10%; margin-bottom:10%;">
        <div class="col l3 m6 s12 ">
            <div class="card-panel">
                <div class="row" style="margin-bottom:0">
                    <div class="input-field col s12" style="text-align: center;">
                        <a style="" class="dropdown-trigger estilobtn tooltipped" href="@Url.Action("Index", "Empleado")" data-position="bottom" data-tooltip="Administración de Empleados"><i class="large material-icons">accessibility</i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col l3 m6 s12 ">
            <div class="card-panel">
                <div class="row" style="margin-bottom:0">
                    <div class="input-field col s12" style="text-align: center;">
                        <a style="" class="estilobtn tooltipped" href="@Url.Action("Index", "Cliente")" data-position="bottom" data-tooltip="Administración de Clientes"><i class="large material-icons ">account_balance_wallet</i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col l3 m6 s12 ">
            <div class="card-panel">
                <div class="row" style="margin-bottom:0">
                    <div class="input-field col s12" style="text-align: center;">
                        <a style="" class="dropdown-trigger estilobtn tooltipped" href="@Url.Action("Index", "Proyecto")" data-position="bottom" data-tooltip="Alta de Proyectos"><i class="large material-icons ">add_to_queue</i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col l3 m6 s12 ">
            <div class="card-panel">
                <div class="row" style="margin-bottom:0">
                    <div class="input-field col s12" style="text-align: center;">
                        <a style="" class="dropdown-trigger estilobtn tooltipped" href="@Url.Action("Index", "WorkTime")" data-position="bottom" data-tooltip="Carga de días"><i class="large material-icons ">assignment</i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (Session["permisos"].ToString() == "2")
{
    <div class="row" style="margin-top:10%; margin-bottom:10%;">
        <div class="col l6 m6 s12 ">
            <div class="card-panel">
                <div class="row" style="margin-bottom:0">
                    <div class="input-field col s12" style="text-align: center;">
                        <a style="" class="dropdown-trigger estilobtn tooltipped" href="@Url.Action("Index", "WorkTime")" data-position="bottom" data-tooltip="Carga de días"><i class="large material-icons ">assignment</i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col l6 m6 s12 ">
            <div class="card-panel">
                <div class="row" style="margin-bottom:0">
                    <div class="input-field col s12" style="text-align: center;">
                        <a style="" class="dropdown-trigger estilobtn tooltipped" href="@Url.Action("Index", "WorkTime")" data-position="bottom" data-tooltip="Descargar Reporte"><i class="large material-icons ">arrow_downward</i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}