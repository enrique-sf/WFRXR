@model WFRXRC.Entities.ctl_Proyecto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .marginT {
        margin-top: 25px;
    }

    .mr {
        margin-right: .88%;
        margin-top: 1%;
    }
</style>
